<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Volunteer #1: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/enterExtraStaff_volunteer1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="15sp"/>
    	</LinearLayout>
    
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Volunteer #2: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/enterExtraStaff_volunteer2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="15sp"/>
    	</LinearLayout>
    	
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Volunteer #3: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/enterExtraStaff_volunteer3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="15sp"/>
    	</LinearLayout>
	
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Staff #1: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/enterExtraStaff_staff1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="15sp"/>
    	</LinearLayout>

	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Staff #2: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/enterExtraStaff_staff2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="15sp"/>
    	</LinearLayout>
    	
	
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Staff #3: "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/enterExtraStaff_staff3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="15sp"/>
    	</LinearLayout>
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dip" >
            
		<Button
            android:id="@+id/enterExtraStaffButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onInventoryPreprocessButtonClick"
            android:text="@string/inventoryPreprocess" />

	</LinearLayout>
</LinearLayout>