        android:orientation="horizontal" >

        <Button
            android:id="@+id/asdbtnb3"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:onClick="onB3ButtonClick"
            android:text="Boy
Age 11-14" />

        <Button
            android:id="@+id/asdbtng3"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:onClick="onG3ButtonClick"
            android:text="Girl
Age 11-14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/asdbtnb4"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:onClick="onB4ButtonClick"
            android:text="Boy
Age 15-18" />

        <Button
            android:id="@+id/asdbtng4"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:onClick="onG4ButtonClick"
            android:text="Girl
Age 15-18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/asdbtnb5"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:onClick="onB5ButtonClick"
            android:text="Boy
Above Age 18" />

        <Button
            android:id="@+id/asdbtng5"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:onClick="onG5ButtonClick"
            android:text="Girl
Above Age 18" />
    </LinearLayout>

</LinearLayout>