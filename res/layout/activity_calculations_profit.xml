<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:orientation="vertical"> 

    <TextView 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Fruit Stand Cost + Smoothie Cost + Additional Costs = Total Costs"
	    android:padding="10dip"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        
       	<TextView android:id="@+id/calc_fruitStandCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:singleLine="true"
            android:maxLength="7"
            android:width="50dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/add"
            android:textSize="12sp"/>
        
        <TextView
            android:id="@+id/calc_smoothieCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="7"
            android:textSize="15sp"
            android:text="@string/zeroDollars"
            android:width="50dp"
            android:layout_marginLeft="5dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/add"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/calc_additionalCosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="7"
            android:textSize="15sp"
            android:text="@string/zeroDollars"
            android:width="60dp" />
      	
      	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/equals"
            android:textSize="12sp"/>
       		        	
       	<EditText android:id="@+id/calc_totalCost"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:maxLength="7"
            android:width="75dp"
            android:textSize="15sp"/>
	</LinearLayout>
	    
    <TextView 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Total Revenue - Total Costs = Net Profit"
	    android:padding="10dip"
	    android:layout_marginLeft = "20dp"/>
    
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        
       <TextView android:id="@+id/calc_totalRevenueProfitEq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:singleLine="true"
            android:maxLength="7"
            android:width="70dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"/>
               	 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/minus"
            android:textSize="12sp"/>
               
       	<TextView android:id="@+id/calc_totalCostProfitEq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:singleLine="true"
            android:maxLength="7"
            android:width="70dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"/>
       	
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/equals"
            android:textSize="12sp"/>
       		        	
       	<EditText android:id="@+id/calc_profit"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:inputType="numberDecimal|numberSigned"
            android:singleLine="true"
            android:maxLength="7"
            android:width="75dp"
            android:textSize="15sp"/>
    </LinearLayout>
       	
    <TextView 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Initial Cash Box + Donations + Net Profit = Cash Box Total"
	    android:padding="10dip"/> 
         
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="horizontal">
        
       <TextView
           android:id="@+id/calc_initCashBox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="10dp"
           android:maxLength="7"
           android:singleLine="true"
           android:text="@string/zeroDollars"
           android:textSize="15sp"
           android:width="50dp" />
               	 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/add"
            android:textSize="12sp"/>
               
       	<TextView android:id="@+id/calc_donations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:singleLine="true"
            android:maxLength="7"
            android:width="50dp"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>
       	
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/add"
            android:textSize="12sp"/>
       		        	
		<TextView
		    android:id="@+id/calc_profitFromEq"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="5dp"
		    android:maxLength="7"
		    android:singleLine="true"
		    android:text="@string/zeroDollars"
		    android:textSize="15sp"
		    android:width="60dp" />
       	
       	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/equals"
            android:textSize="12sp"/>
       	
       	<EditText android:id="@+id/calc_finalCashBox"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zeroDollars"
            android:inputType="numberDecimal|numberSigned"
            android:singleLine="true"
            android:maxLength="7"
            android:width="75dp"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dip">
       	
	    <TextView
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/numCorrect"/> 
	    
	    <TextView 
		    android:id="@+id/num_correct_profit_calculations" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"/>
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dip">
		    
	    <Button
	         android:id="@+id/checkProfitCalculationsBtn"
	         android:layout_width="150dp"
	         android:layout_height="50dp"
	         android:textSize="12sp"
	         android:onClick="onCheckProfitCalculationsButtonClick"
	         android:text="Check Calculations" />
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dip">
	    
	    <Button
	        android:id="@+id/finishBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:onClick="onCheckFinishButtonClick"
	        android:text="Finish and Return to Main Activity"
	        android:textSize="12sp" />

	</LinearLayout>
</LinearLayout>