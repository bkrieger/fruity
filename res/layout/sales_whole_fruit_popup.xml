    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Grapes" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="onGrapesMinusButtonClick"
            android:text="-" />

        <TextView
            android:id="@+id/SWFPGrapeCounter"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="onGrapesPlusButtonClick"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onWholeFruitDoneButtonClick"
            android:text="Done" />
    </LinearLayout>

</LinearLayout>