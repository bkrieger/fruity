            android:id="@+id/SWFPOrangeCounter"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="onOrangesPlusButtonClick"
            android:text="+" />
    </LinearLayout>

