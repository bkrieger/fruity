<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dip">
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
	        
	        <ImageView
	            android:id="@+id/apple_img"
	            android:layout_width="90dp"
	            android:layout_height="88dp"
	            android:layout_marginLeft="5dp"
	            android:src="@drawable/apple"
	            android:contentDescription="@string/apple"/>
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/apple"
	            android:textSize="20sp"
	            android:textColor="@color/white"/>
        </RelativeLayout>
        
        <EditText
            android:id="@+id/num_inv_preprocess_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="3"
            android:text="@string/zero"
            android:width="55dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >
	        
	        <ImageView
	            android:id="@+id/pear_img"
	            android:layout_width="100dp"
	            android:layout_height="88dp"
	            android:src="@drawable/pear"
	            android:contentDescription="@string/pear"/>
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/pear"
	            android:textSize="20sp"
	            android:textColor="@color/white"/>
        </RelativeLayout>
        
        <EditText android:id="@+id/num_inv_preprocess_pear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLength="3"
            android:text="@string/zero"
            android:width="55dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dip" >

		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
	        
	        <ImageView
	            android:id="@+id/orange_img"
	            android:layout_width="90dp"
	            android:layout_height="88dp"
	            android:layout_marginLeft="5dp"
	            android:src="@drawable/orange"
	            android:contentDescription="@string/orange"/>
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/orange"
	            android:textSize="20sp"
	            android:textColor="@color/white"/>
        </RelativeLayout>
        
        <EditText android:id="@+id/num_inv_preprocess_orange"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"/>

		 <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >
	        
	        <ImageView
	            android:id="@+id/banana_img"
	            android:layout_width="100dp"
	            android:layout_height="88dp"
	            android:src="@drawable/banana"
	            android:contentDescription="@string/banana"/>
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/banana"
	            android:textSize="20sp"
	            android:textColor="@color/white"/>
        </RelativeLayout>
        
        <EditText android:id="@+id/num_inv_preprocess_banana"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dip" >

		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
	        
	        <ImageView
	            android:id="@+id/grapes_img"
	            android:layout_width="90dp"
	            android:layout_height="88dp"
	            android:layout_marginLeft="5dp"
	            android:src="@drawable/grapes"
	            android:contentDescription="@string/grapes"/>
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/grapes"
	            android:textSize="20sp"
            	android:textColor="@color/white"/>
        </RelativeLayout>
        
        <EditText android:id="@+id/num_inv_preprocess_grapes"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"
            android:layout_marginRight="5dp"/>

		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
	        
	        <ImageView
	            android:id="@+id/kiwi_img"
	            android:layout_width="90dp"
	            android:layout_height="88dp"
	            android:layout_marginLeft="5dp"
	            android:src="@drawable/kiwi"
	            android:contentDescription="@string/kiwi"/>
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="@string/kiwi"
	            android:textSize="20sp"
	            android:textColor="@color/white"/>
        </RelativeLayout>
        
        <EditText android:id="@+id/num_inv_preprocess_kiwi"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"/>
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mixedBag"
            android:textSize="20sp"/>
        
        <EditText android:id="@+id/num_inv_postprocess_mixedbag"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/granola"
            android:textSize="20sp"/>
        
        <EditText android:id="@+id/num_inv_postprocess_granola"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smoothie"
            android:textSize="20sp"/>
        
        <EditText android:id="@+id/num_inv_postprocess_smoothie"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:textSize="20sp"/>
        
        <EditText android:id="@+id/num_inv_postprocess_other"
            android:cursorVisible="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:inputType="number"
            android:maxLength="3"
            android:width="55dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        
        <Button android:id="@+id/salesDemographicsBtn"
	        android:text="@string/salesDemographics"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="onInventorySalesDemographicsButtonClick"/>
    </LinearLayout>
</LinearLayout>